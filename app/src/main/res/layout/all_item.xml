<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <!-- Top Row: UV Index and Sunrise -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- UV Index Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#802D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- UV Index Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_uv_index"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UV INDEX"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <!-- UV Value -->
                <TextView
                    android:id="@+id/uv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp" />

                <!-- UV Level -->
                <TextView
                    android:id="@+id/uv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <!-- UV Progress Bar -->
                <ProgressBar
                    android:id="@+id/uv_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:progress="5"
                    android:max="100"
                    android:progressDrawable="@drawable/uv_progress_drawable"
                    android:layout_marginBottom="8dp" />

                <!-- UV Description -->
                <TextView
                    android:id="@+id/uv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low for the rest\nof the day."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sunrise Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Sunrise Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sunrise"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUNRISE"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <!-- Sunrise Time -->
                <TextView
                    android:id="@+id/sunrise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:28AM"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp" />

                <!-- Sun Arc Visual -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sun_arc_background"
                        android:scaleType="fitXY" />

                    <View
                        android:id="@+id/sun_position"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/sun_position_circle"
                        android:layout_gravity="start|bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp" />

                </FrameLayout>

                <!-- Sunset Time -->
                <TextView
                    android:id="@+id/sunset_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunset: 6:10PM"
                    android:textColor="#FFFFFF"
                    android:visibility="visible"
                    android:layout_marginTop="0dp"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Bottom Row: Feelslike and Humidty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Wind Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Wind Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_wind"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIND"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <!-- Wind Compass -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp">

                    <!-- Compass Background -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/wind_compass_background"
                        android:scaleType="fitCenter" />

                    <!-- Wind Direction Indicator -->
                    <ImageView
                        android:id="@+id/wind_direction_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wind_direction_arrow"
                        android:rotation="0" />

                    <!-- Compass Labels -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="4dp" />

                    <!-- Wind Speed -->
                    <TextView
                        android:id="@+id/wind_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m/s"
                        android:textColor="#8E8E93"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rainfall Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Rainfall Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_rainfall"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RAINFALL"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <!-- Current Rainfall -->
                <TextView
                    android:id="@+id/current_rainfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 mm"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp" />

                <!-- Rainfall Period -->
                <TextView
                    android:id="@+id/rainfall_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at current time"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Expected Rainfall -->
                <TextView
                    android:id="@+id/expected_rainfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 mm expected\nin next 24h."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <!-- Wind Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Wind Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_feelslike"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FEELS LIKE"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/feels_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="73%"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/contentfeels_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Similar to the actual temperature"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rainfall Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D2D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Rainfall Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_rainfall"
                        app:tint="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RAINFALL"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <!-- Current Rainfall -->
                <TextView
                    android:id="@+id/rainfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="71%"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp" />


                <TextView
                    android:id="@+id/contentrainfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The dew point is 16Â° right now."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>